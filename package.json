{
  "name": "prioritizer",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"yarn next dev\" \"yarn electron:watch\" \"wait-on http://localhost:3000 && yarn electron:dev\"",
    "electron:watch": "rm -rf dist-electron && tsc -p electron/tsconfig.json --watch",
    "build:electron": "rm -rf dist-electron && tsc -p electron/tsconfig.json",
    "electron:dev": "electron .",
    "build": "yarn next build && yarn build:electron",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "electron-log": "^5.4.3",
    "module-alias": "^2.2.3",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "electron": "^39.2.7",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
